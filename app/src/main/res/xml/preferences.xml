<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/listPersonCategory"
        android:entryValues="@array/listPersonCategoryValues"
        android:key="prefPersonCategory"
        android:summary="@string/PersonCategorySummary"
        android:title="@string/PersonCategory" />

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/listLifestyle"
        android:entryValues="@array/listLifestyleValues"
        android:key="prefLifestyle"
        android:summary="@string/DefaultLifestyle"
        android:title="@string/LifestyleSummary" />

    <MultiSelectListPreference
        android:defaultValue="@array/listLifestyleExtrasDefaultValues"
        android:entries="@array/listLifestyleExtras"
        android:entryValues="@array/listLifestyleExtrasValues"
        android:key="prefLifestyleExtras"
        android:summary="@string/LifestyleSummary"
        android:title="@string/Lifestyle" />

</PreferenceScreen>